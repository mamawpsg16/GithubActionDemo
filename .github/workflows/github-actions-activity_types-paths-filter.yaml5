name: GitHub Actions Demo
run-name: ${{ github.actor }} is testing out GitHub Actions with Activity Types, Path & Filter with Multiple Event ðŸš€

on: 
    push:
     paths:
      - 'src/**'
      - '!src/ignore-this-file.txt' #WILL NOT TRIGGER WORKFLOW FOR THIS FILE
    pull_request:
      types: [opened, synchronize]
      # branches: # Only run on PRs to main
        # - main
      # branches-ignore: # Run on all branches except main
        # - main
    issues:
        types: [opened]
      
jobs:
  setup:
    if: github.event_name == 'push'
    runs-on: ubuntu-latest
    steps:
      - name: Setup
        run: |
          echo "Setup on Ubuntu"

  pull_request:
    if: github.event_name == 'pull_request'
    runs-on: ubuntu-latest
    steps:
      - name: Pull Request
        run: |
          echo "Pull Request on Ubuntu"

  issues:
    if: github.event_name == 'issues'
    runs-on: ubuntu-latest
    steps:
      - name: Issue Request
        run: |
          echo "Issue Request on Ubuntu"